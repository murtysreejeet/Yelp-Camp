<% layout('layouts/boilerPlates') -%>

<h1>All Campgrounds</h1>
<div>
  <a href="/campgrounds/new"></a>
</div>

<% for(let campground of campgrounds) {%>
  <div class="card" mb-3>
<div class="row">
  <div class="col-md-4">
    <% if(campground.images.length){ %>
   <img  class="img-fluid" src="<%= campground.images[0].url %>" alt="img">
   <% } else{ %>
    <img  class="img-fluid" src="https://res.cloudinary.com/drapyptrd/image/upload/v1724731605/Yelp_Camp/ziwbntxo7lcah1ojcwcj.png" alt="img">

    <% } %>
  </div>
  <div class="col-md-8">
    <h5 class="card-title"><%= campground.title  %></h5>
    <p class="card-text"><%= campground.description %></p>
    <h5 class="card-title"><%= campground.location  %></h5>
    <h5 class="card-title">ðŸ’²<%= campground.price  %></h5>
    <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">View <%= campground.title %></a>
  </div>
</div>
  </div>


<% } %>
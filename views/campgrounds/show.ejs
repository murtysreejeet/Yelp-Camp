<% layout('layouts/boilerPlates') -%>

<div class="row">
  <div class="col-6 offset-3">
    <div class="card" style="width: 18rem;">
      <img src="" class="card-img-top" alt="">
      <div class="card-body">
        <h5 class="card-title"><h1><%= Campground.title %></h1></h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Location:<h1><%= Campground.location %></h1></li>
        <li class="list-group-item">Description:<%= Campground.description %></li>
        <li class="list-group-item">price:ðŸ’²<%= Campground.price %>
        </li>
      </ul>
      <div class="card-body">
        <a href="/campgrounds/<%=Campground._id%>/edit"> Edit Campground</a>
        <a href="/campgrounds">All Campground</a>
        <form action="/campgrounds/<%= Campground._id%>?_method=delete" method="post">
          <button class="btn btn-primary">Delete</button>
        </form>
      </div>
    </div>
    <h2>Leave a Review</h2>
    <form action="/campgrounds/<%= Campground._id %>/reviews"   method="post" class="mb-3 needs-validation" novalidate >
      <div class="mb-3">
        <label class="form-label" for="rate">Rating</label>
        <!-- <input  type="range" name="review[Rating]" id="rate" > -->
        <input class="form-range" type="number" name="review[rating]" id="rate" min="1" max="5">
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea name="review[body]" id="body" class="form-control" cols="15" rows="3" required></textarea>
        <div class="valid-feedback">
          Looks Good!
        </div>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
  </div>
</div>




